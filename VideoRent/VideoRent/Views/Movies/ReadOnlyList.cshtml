@model VideoRent.Models.CamelCaseResolver
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Movies</h2>
<table id="movies" class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Movie</th>
        <th>Genre</th>
    </tr>
    </thead>
</table>

@section scripts
{
    <script>

        var dataTable = {
            table: null,
            initializeDataTable: function() {
                dataTable.table = $("#movies").DataTable({
                    processing: true,
                    serverSide: true,
                    ajax: {
                        url: "/Movies/Index",
                        type: "POST",
                        dataSrc: "data"
                    },
                    columns: [
                        {
                            data: "name",
                            render: function(data, type, movie) {
                                return "<a href='/movies/edit/" + movie.id + "'>" + movie.name + "</a>";
                            }
                        },
                        {
                            data: "genre",
                            render: function(data) {
                                return data.name;
                            }
                        }
                    ]
                });
            },
            getData: function() {
                if (dataTable.table == null)
                    dataTable.initializeDataTable();
                else
                    dataTable.table.ajax.reload();
            }
        }

        $(document).ready(function() {
            dataTable.getData();
        });
  

    </script>
}




